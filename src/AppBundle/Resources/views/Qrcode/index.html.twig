{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
    <h1>Qrcode list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Deviceid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('qrcode_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.content }}</td>
                <td>{{ entity.deviceId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('qrcode_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('qrcode_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('qrcode_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
