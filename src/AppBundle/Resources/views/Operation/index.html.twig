{% extends 'AppBundle::layout.html.twig' %}

{% block body -%}
<div class="row">
	<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading">Operation list</div>
			<div class="panel-body">
          <table class="table table-condensed">
    				<thead>
              <tr>
                  <th>Id</th>
                  <th>Libelle</th>
                  <th>Actions</th>
              </tr>
						</thead>
						<tbody>
              {% for entity in entities %}
                  <tr>
                      <td><a href="{{ path('operation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                      <td>{{ entity.libelle }}</td>
                      <td>
                      <ul>
                          <li>
                              <a href="{{ path('operation_show', { 'id': entity.id }) }}">show</a>
                          </li>
                          <li>
                              <a href="{{ path('operation_edit', { 'id': entity.id }) }}">edit</a>
                          </li>
                      </ul>
                      </td>
                  </tr>
              {% endfor %}
						</tbody>
          </table>
      </div>
    </div>
  </div>
</div>


    <ul>
        <li>
            <a href="{{ path('operation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
